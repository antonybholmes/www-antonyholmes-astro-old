---
import Breadcrumb from "../components/breadcrumb"
import PageTitle from "../components/page-title"
import type ICrumbProps from "../interfaces/crumb-props"
import type ILayoutProps from "../interfaces/layout-props"

export interface Props extends ILayoutProps, ICrumbProps {}

const {
  title,
  showTitle = false,
  showCrumbs = true,
  superTitle,
  subTitle,
  crumbs,
} = Astro.props
---

{showCrumbs && <Breadcrumb crumbs={crumbs} className="mb-8" />}

{
  showTitle && (
    <PageTitle
      title={title}
      subTitle={subTitle}
      superTitle={superTitle}
      className="mb-8"
    />
  )
}
