---
import { getEntryBySlug } from "astro:content"
import PublicationsPage from "../components/pages/publications-page"
import BaseLayout from "../layouts/BaseLayout.astro"
import { getSelectedPublications } from "../lib/api"

const publications = getSelectedPublications("antony-holmes")
const person = await getEntryBySlug("people", "antony-holmes")
---

<BaseLayout title="Publications">
  <PublicationsPage
    person={person}
    publications={publications}
    client:load
    slot="main"
  />
</BaseLayout>
